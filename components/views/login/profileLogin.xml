<?xml version="1.0" encoding="utf-8" ?>
<component name="ProfileLogin" extends="Group">
    <script type="text/brightscript" uri="profileLogin.brs" />

    <children>

        <Poster 
            id="background"
            uri="pkg:/images/fondo.png"
            width="1920"
            height="1080"
            translation="[0,0]" />    

        <LayoutGroup
            id="layoutgroup1"
            layoutDirection="vert"
            horizAlignment="left"
            itemSpacings="[90,5,5,90,5]"
            translation="[200,200]">

            <Label
                id="title"
                text="Log In"
                font="font:LargeBoldSystemFont"
                translation="[750,200]"/>

            <HuluEditBox
                id="email"
                title="Email" />

            <HuluEditBox
                id="password"
                title="Password"
                secureMode="false" />
    
        </LayoutGroup>  

        <Rectangle
            id="inforectangle"
            color="#4F6D70"
            width="700"
            height="100"
            translation="[200,650]">

                <Label
                    id="infotext"
                    text="Please visit hulu.com/forgot if you have forgotten your password and return hare to log in with your new password."
                    numLines="3"
                    lineSpacing="0.5"
                    wrap="true"
                    width="650"
                    horizAlign="center"
                    color="#FFFFFF"
                    font="font:SmallBoldSystemFont"/>
        </Rectangle>

        <HuluButton
            id="buttonlogin"
            name="LOG IN"
            translation="[200,850]"/>       

        <Poster
            id="logo"
            uri="pkg:/images/logo.png"
            width="105"
            height="35"
            translation="[1670,70]" />
        
        <Keyboard
            id="keyboard"
            translation="[260,600]" 
            keyColor="#6B6B6A"
            visible="false" />
        
    </children>
</component> 
